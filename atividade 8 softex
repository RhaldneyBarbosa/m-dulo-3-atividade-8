        num2  =  int ( input ( 'Informe o Segundo Valor: ' ))
        print ( '================== OPERADORES ===========================' )
        print ( '1. Para Soma; 2 Subtração; 3. Multiplicação e 4. Divisão' )
        print ( '=============================================== =========' )
         =  str ( input ( 'Informe o Operador Desejado: ' )) operador

        print ( 'Resultado:' , calculadora ( num1 , num2 , operador ))

def  calculadora ( num1 , num2 , operador ):
    
    if  operador  ==  '0' :
        retornar  0
    elif  operador  ==  '1' :
        retornar  num1  +  num2
    elif  operador  ==  '2' :
        retornar  num1 - num2
    elif  operador  ==  '3' :
        retornar  num1 * num2
    elif  operador  ==  '4' :
        retornar  num1 / num2
    
